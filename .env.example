# Server Configuration
SERVER_PORT=8080

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/phoen1xcloud?sslmode=disable

# JWT Configuration
# IMPORTANT: Generate a strong secret with: openssl rand -base64 32
# Must be at least 32 characters long
JWT_SECRET=GENERATE_A_STRONG_SECRET_WITH_openssl_rand_base64_32

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Storage Configuration
# Options: "local" or "s3"
STORAGE_TYPE=local

# Local Storage Configuration
LOCAL_STORAGE_PATH=./uploads

# S3 Storage Configuration (for Cloudflare R2 or AWS S3)
S3_BUCKET=your-bucket-name
S3_REGION=auto
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
